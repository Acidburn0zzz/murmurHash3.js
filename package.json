{
  "name": "murmurhash3.js",
  "description": "All of MurmurHash3, in javascript.",
  "version": "3.0.0",
  "author": {
    "name": "Karan Lyons",
    "email": "karan@karanlyons.com"
  },
  "copyright": "© 2012–2020, Karan Lyons",
  "license": "MIT",
  "keywords": [
    "murmurhash",
    "murmmurhash3",
    "hash",
    "hashing",
    "progressive hash",
    "progressive hashing"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib ./coverage",
    "lint": "tslint --project tsconfig.json --format stylish",
    "test": "jest --config jestconfig.json --coverage",
    "test:watch": "jest --config jestconfig.json --coverage --watch",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "travis": "jest --config jestconfig.json",
    "coveralls": "jest --config jestconfig.json --silent --coverage --coverageReporters=text-lcov | coveralls",
    "prepublishOnly": "npm run-script clean && npm run-script lint && npm run-script test && jq -e '.total | to_entries | map(.value.pct) | min == 100' ./coverage/coverage-summary.json && npm run-script build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "coveralls": "^3.0.9",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.4"
  },
  "files": [
    "lib/**/*"
  ]
}
